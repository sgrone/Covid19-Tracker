<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBF3FA"
    tools:context=".Activity2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:id="@+id/stateName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="#B53F26"/>

    <ImageView
        android:id="@+id/stateMap"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/stateName"
        android:layout_centerHorizontal="true"
        android:contentDescription="Picture of state" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/stateMap"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp"
        android:id="@+id/metricsTV"
        android:textColor="#D35F47"/>

</RelativeLayout>